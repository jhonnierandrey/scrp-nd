                    </div> -->
                    <button type="submit" class="btn btn-outline-primary btn-lg">Start</button>
                </form>
            </section>
            <section class="container mt-5 results-view">

            </section>
        </main>
        
        <footer>
            <%- include('../partials/footer'); %>
        </footer>
    </div>
    
